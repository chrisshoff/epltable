<style>
.container { margin-top: 30px; }
.team-row { background-color:#D5DCE6; border-bottom:1px solid #999; padding:5px 0px; }
.green { background-color:#BFD4BC; }
.red { background-color:#D4BCBC; }
.empty { height:30px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-3">
          <select id="table-selector" class="form-control">
            <option value="default">Default Table</option>
            <option value="cann">Cann Table</option>
          </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <h1>Premier League Table</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div id="table"></div>
        </div>
    </div>
</div>

<script type="text/template" id="row-template">
    <div class="col-sm-1 position">{{ position }}</div>
    <div class="col-sm-3 name">{{ name }}</div>
    <div class="col-sm-2 points">{{ points }}</div>
</script>